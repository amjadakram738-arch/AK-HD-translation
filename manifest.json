{
  "manifest_version": 3,
  "name": "Video Translate AI",
  "version": "1.0.0",
  "description": "ترجمة فورية للفيديوهات داخل المتصفح باستخدام الذكاء الاصطناعي.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "tabCapture",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "https://api.yourproxy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icons/*", "audio-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
